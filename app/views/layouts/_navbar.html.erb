<nav class="navbar">
  <div class="navbar-brand">
    <%= link_to "PageTurner", root_path, class: "navbar-logo" %>
  </div>
  <div class="navbar-links">
    <%= link_to "Posts", posts_path, class: "navbar-link #{'active' if current_page?(posts_path)}" %>
    <%= link_to "Bookclubs", clubs_path, class: "navbar-link #{'active' if current_page?(clubs_path)}" %>
    <%= link_to "Bookshelves", bookshelves_path, class: "navbar-link #{'active' if current_page?(bookshelves_path)}" %>
    <%= link_to "Books", books_path, class: "navbar-link #{'active' if current_page?(books_path)}" %>
  </div>
  <div class="navbar-user">
    <% if authenticated? %>
      <div class="navbar-dropdown">
        <button class="navbar-dropdown-toggle"><%= Current.user&.nickname %></button>
          <div class="navbar-dropdown-menu">
            <%= link_to "Profilo", user_path(Current.user&.id), class: "navbar-dropdown-item" %>
            <%= link_to "Edit user", edit_user_path(Current.user&.id), class: "navbar-dropdown-item" %>
            <%= button_to "Logout", logout_path, method: :delete, class: "navbar-dropdown-item"%>
        </div>
      </div>
    <% else %>
      <%= link_to "Login", new_session_path, class: "navbar-link" %>
      <%= link_to "Register", new_user_path, class: "navbar-link" %>
    <% end %>
  </div>
</nav>
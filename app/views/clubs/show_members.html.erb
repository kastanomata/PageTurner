<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="club_info">
      <h1><%= @club.name %></h1>
      <span><%= link_to "view the bookclub", @club %></span>
    </section>
    <section class="stats">
      <%= render 'shared/club_stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @members.any? %>
      <ul class="users follow">
        <%= render @members %>
      </ul>
      <%# will_paginate %>
    <% end %>
  </div>
</div>